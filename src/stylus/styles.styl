@import "mixins"

@font-face
  font-family Batch 
  src url('fonts/batch/batch-icons-webfont.ttf'),
      url('fonts/batch/batch-icons-webfont.svg'),
      url('fonts/batch/batch-icons-webfont.woff'),
      url('fonts/batch/batch-icons-webfont.eot')

@font-face 
  font-family "Edmondsans" 
  src url("fonts/edmondsans-regular.eot")
  src url("fonts/edmondsans-regular.eot") format("embedded-opentype"), url("fonts/edmondsans-regular.svg") format("svg"), url("fonts/edmondsans-regular.woff") format("woff"), url("fonts/edmondsans-regular.ttf") format("truetype")

*
  box-sizing border-box
i
  font-family Batch
  font-style normal

html, body
  width 100%
  min-width 360px
  height 100%
  margin 0
  font 18px 'Edmondsans', 'Helvetica Neue', Helvetica, Arial

section
  width 100%
  min-height 100%
  overflow hidden  
  padding-bottom 20px
  padding-top 10px
pre
  border-radius 3px
  margin 30px 0 5px 0
.description
  margin 20px 0
  margin-bottom 40px
.btn
  display inline-block
  padding 4px 12px
  margin-bottom 0
  font-size 14px
  line-height 20px
  color #333333
  text-align center
  text-shadow 0 1px 1px rgba(255, 255, 255, 0.75)
  vertical-align middle
  cursor pointer
  background-color #f5f5f5
  background-image -moz-linear-gradient(top, #ffffff, #e6e6e6)
  background-image -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#e6e6e6))
  background-image -webkit-linear-gradient(top, #ffffff, #e6e6e6)
  background-image -o-linear-gradient(top, #ffffff, #e6e6e6)
  background-image linear-gradient(to bottom, #ffffff, #e6e6e6)
  background-repeat repeat-x
  border 1px solid #cccccc
  border-color #e6e6e6 #e6e6e6 #bfbfbf
  border-color rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25)
  border-bottom-color #b3b3b3
  border-radius 4px
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05)
  &:active
    box-shadow inset 0 2px 4px rgba(0, 0, 0, 0.15), 0 1px 2px rgba(0, 0, 0, 0.05)
    background-image none
    outline 0
.column
  float left
  width 50%
  padding 0 10px
.wrap
  max-width 1040px
  padding 20px
  margin auto
  overflow hidden
h1
  font-size 50px
h3
  font-size 30px
  margin 10px 0
h4
  font-size 18px
  margin-bottom 0
.screen
  width 100%
  height 300px
  padding 15px
  border-radius 20px
  background #111
  margin auto
  margin-bottom 40px
  overflow hidden
  font 10px Helvetica, Arial
  .screen-inner
    width 100%
    height 100%
    background #fff
    #display
      height 100%
      position relative
      overflow auto
      padding-top 30px
      color #555
      .header
        width 100%
        padding 0 5px
        height 30px
        font-weight bold
        background #ccc
        position absolute
        line-height 30px
        top 0
        left 0
      .column
        color #444
        min-height 100%
        padding 10px
        text-align center

        img
          display block
          margin 10px auto
      .column:last-child
        background #f5f5f5
  &.screen-tablet
    padding 10px
    border-radius 15px
    #display
      .column
        width 100%
        float none
  &.screen-mobile
    padding 5px
    border-radius 10px
    #display
      img
        width 100%
.warning
  border 1px solid rgba(100, 0, 0, 0.4)
  background  rgba(200, 0, 0, 0.2)
  padding 10px
  padding-left 60px
  border-radius 4px
  position relative
  color #8c1235
  margin 10px 0
  text-align center
  font-weight bold
  text-shadow 1px 1px 0 rgba(255, 255, 255, 0.1)
  i
    color rgba(100, 0, 0, 0.6)
    position absolute
    left 10px
    top 50%
    font-size 30px
    margin-top -18px
#header
  width 100%
  height 40px
  position fixed
  top 0
  left 0
  background rgba(0, 0, 0, 0.3)
  z-index 9001
  a
    height 40px
    line-height 40px
    text-decoration none
    padding 0 20px  
    display inline-block
    color #fff
    i
      display none
    &:hover
      background rgba(0, 0, 0, 0.1)
#main
  width 100%
  height 100%

#slide-intro
  height 100%
  background url(../img/pw_maze_white.png)
  box-shadow 0 5px 5px rgba(0, 0, 0, 0.075), inset 0px 0px 100px rgba(0, 0, 0, 0.15)
  position relative
  z-index 10
  text-align center
  vertical-align middle
  color #ae1b45
  text-shadow 1px 1px 0px rgba(255, 255, 255, 0.3), -1px -1px 0px rgba(0, 0, 0, 0.1)
  h1
    display inline-block
    font-size 105px
    position relative
    vertical-align middle
    font-family 'Oleo Script Swash Caps', cursive
    span
      display block
      margin-left 5em
  img
    float left


  &:before
    content ''
    display inline-block
    height 100%
    vertical-align middle
    margin-right -0.25em

#slide-responsive
  background #ae1b45
  color #fff
  h1, h3
    text-shadow -1px -1px 0 rgba(0, 0, 0, 0.2)
    text-align center  
  p 
    text-align center
  img
    width 100%
  .column:last-child
    padding-top 40px

#slide-mediaquery
  position relative
  z-index 9
  background url(../img/back_pattern.png)
  box-shadow 0 -5px 5px rgba(0, 0, 0, 0.075), 0 5px 5px rgba(0, 0, 0, 0.075)

#slide-practices
  background-image linear-gradient(top, rgb(96,190,222) 11%, rgb(13,119,168) 87%)
  background-image -o-linear-gradient(top, rgb(96,190,222) 11%, rgb(13,119,168) 87%)
  background-image -moz-linear-gradient(top, rgb(96,190,222) 11%, rgb(13,119,168) 87%)
  background-image -webkit-linear-gradient(top, rgb(96,190,222) 11%, rgb(13,119,168) 87%)
  background-image -ms-linear-gradient(top, rgb(96,190,222) 11%, rgb(13,119,168) 87%)

  background-image -webkit-gradient(
    linear,
    left top,
    left bottom,
    color-stop(0.11, rgb(96,190,222)),
    color-stop(0.87, rgb(13,119,168))
  )
  color #104252
  h1
    font-family 'Oleo Script Swash Caps', cursive
    font-size 50px
    text-shadow 1px 1px 0 rgba(255, 255, 255, 0.2)
  ul
    list-style none
    padding 0
    li
      padding-left 30px
      padding-bottom 20px
      position relative
    i
      position absolute
      top 0
      left 0

  button
    width 100%
    height 60px
    color #ffffff
    font-size 18px
    text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)
    background-color #006dcc
    background-image -moz-linear-gradient(top, #0088cc, #0044cc)
    background-image -webkit-gradient(linear, 0 0, 0 100%, from(#0088cc), to(#0044cc))
    background-image -webkit-linear-gradient(top, #0088cc, #0044cc)
    background-image -o-linear-gradient(top, #0088cc, #0044cc)
    background-image linear-gradient(to bottom, #0088cc, #0044cc)
    background-repeat repeat-x
    border-color #0044cc #0044cc #002a80
    border-color rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25)
    transition all 0.5s
    &:active
      transform scale(0.8, 0.8)
  pre 
    margin-top 0
@media all and (max-width: 1040px)
  #slide-intro
    h1
      font-size 70px
      span
        margin-left 4em
    img
      width 160px

@media all and (max-width: 740px)
  .column
    width 100%
    float none
  #header
    a
      i
        display inline
      span
        display none

@media all and (max-width: 640px)
  #slide-intro 
    h1
      font-size 70px
      span
        margin-left 0
    img
      display none
      
@media all and (max-width: 450px)
  #slide-intro 
    h1
      font-size 50px